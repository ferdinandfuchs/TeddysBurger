---
interface Props {
  title?: string;
  content?: string;
  image?: string;
}

const {
  title = "Ãœber uns",
  content = "",
  image,
} = Astro.props;
---

<section id="about" class="py-16 md:py-24 bg-background">
  <div class="container mx-auto px-4">
    <div class={`grid gap-8 md:gap-12 items-center ${image ? 'md:grid-cols-2' : 'max-w-3xl mx-auto'}`}>
      <!-- Text Content -->
      <div class={image ? '' : 'text-center'}>
        <h2 class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold text-accent mb-6">
          {title}
        </h2>

        {content ? (
          <div
            class="prose prose-lg prose-invert max-w-none text-foreground/90 leading-relaxed space-y-4"
            set:html={content}
          />
        ) : (
          <slot />
        )}
      </div>

      <!-- Optional Image -->
      {image && (
        <div class="relative order-first md:order-last">
          <div class="aspect-square md:aspect-[4/3] overflow-hidden rounded-lg">
            <img
              src={image}
              alt={title}
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
          <!-- Decorative accent border -->
          <div class="absolute -bottom-3 -right-3 w-full h-full border-2 border-accent rounded-lg -z-10"></div>
        </div>
      )}
    </div>
  </div>
</section>
