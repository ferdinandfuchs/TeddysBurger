---
interface SocialLinks {
  instagram?: string;
  facebook?: string;
}

interface Props {
  title?: string;
  phone?: string;
  email?: string;
  address?: string;
  socialLinks?: SocialLinks;
}

const {
  title = "Kontakt",
  phone,
  email,
  address,
  socialLinks,
} = Astro.props;

// Format phone number for tel: link
const phoneLink = phone?.replace(/[\s\-\(\)]/g, '') || '';
---

<section id="contact" class="py-16 md:py-24 bg-background-alt">
  <div class="container mx-auto px-4">
    <h2 class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold text-accent mb-8 md:mb-12 text-center">
      {title}
    </h2>

    <div class="max-w-2xl mx-auto">
      <div class="grid gap-6 md:grid-cols-2">
        <!-- Phone -->
        {phone && (
          <div class="bg-background p-6 rounded-lg text-center">
            <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-accent/20 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <h3 class="font-heading text-lg font-semibold text-foreground mb-2">Telefon</h3>
            <a
              href={`tel:${phoneLink}`}
              class="text-accent hover:text-accent-hover transition-colors text-lg"
            >
              {phone}
            </a>
          </div>
        )}

        <!-- Email -->
        {email && (
          <div class="bg-background p-6 rounded-lg text-center">
            <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-accent/20 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="font-heading text-lg font-semibold text-foreground mb-2">E-Mail</h3>
            <a
              href={`mailto:${email}`}
              class="text-accent hover:text-accent-hover transition-colors"
            >
              {email}
            </a>
          </div>
        )}
      </div>

      <!-- Address -->
      {address && (
        <div class="mt-6 bg-background p-6 rounded-lg text-center">
          <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-accent/20 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="font-heading text-lg font-semibold text-foreground mb-2">Adresse</h3>
          <p class="text-foreground/90 whitespace-pre-line">
            {address}
          </p>
        </div>
      )}

      <!-- Social Links -->
      {(socialLinks?.instagram || socialLinks?.facebook) && (
        <div class="mt-8 text-center">
          <h3 class="font-heading text-lg font-semibold text-foreground mb-4">Folge uns</h3>
          <div class="flex justify-center gap-4">
            {socialLinks.instagram && (
              <a
                href={socialLinks.instagram}
                target="_blank"
                rel="noopener noreferrer"
                class="w-12 h-12 rounded-full bg-background flex items-center justify-center text-foreground hover:text-accent transition-colors"
                aria-label="Instagram"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
            )}
            {socialLinks.facebook && (
              <a
                href={socialLinks.facebook}
                target="_blank"
                rel="noopener noreferrer"
                class="w-12 h-12 rounded-full bg-background flex items-center justify-center text-foreground hover:text-accent transition-colors"
                aria-label="Facebook"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
                </svg>
              </a>
            )}
          </div>
        </div>
      )}
    </div>
  </div>
</section>
