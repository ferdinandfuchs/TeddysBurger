---
interface Props {
  name: string;
  description?: string;
  price: number;
  image?: string;
  available?: boolean;
}

const {
  name,
  description,
  price,
  image,
  available = true,
} = Astro.props;

// Format price with Euro symbol and German locale
const formattedPrice = new Intl.NumberFormat('de-DE', {
  style: 'currency',
  currency: 'EUR',
}).format(price);
---

<div class={`bg-background-alt rounded-lg overflow-hidden transition-transform hover:scale-[1.02] ${!available ? 'opacity-60' : ''}`}>
  <!-- Image -->
  {image ? (
    <div class="aspect-[4/3] overflow-hidden">
      <img
        src={image}
        alt={name}
        class="w-full h-full object-cover"
        loading="lazy"
      />
    </div>
  ) : (
    <div class="aspect-[4/3] bg-background flex items-center justify-center">
      <svg
        class="w-12 h-12 text-foreground/20"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="1.5"
          d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
        />
      </svg>
    </div>
  )}

  <!-- Content -->
  <div class="p-4">
    <div class="flex justify-between items-start gap-2 mb-2">
      <h3 class="font-heading text-lg font-semibold">
        {name}
      </h3>
      <span class="font-heading text-accent font-bold whitespace-nowrap">
        {formattedPrice}
      </span>
    </div>

    {description && (
      <p class="text-sm text-foreground/70 leading-relaxed">
        {description}
      </p>
    )}

    {!available && (
      <p class="text-sm text-accent mt-2 font-semibold">
        Zurzeit nicht verf√ºgbar
      </p>
    )}
  </div>
</div>
